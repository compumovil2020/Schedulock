<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login"
    tools:context=".Controladores_de_Eventos.FragmentoVerLogros">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/forma_rectangulo_bordes_redondeados">
            <TextView
                android:id="@+id/Logros"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Â¡LOGROS!"
                android:textAlignment="center"
                android:textColor="@color/color_schedulock_base_azul"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />


            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center">

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:rotation="90"
                    android:progress="78"
                    android:layout_marginTop="20dp"
                    android:progressTint="@color/color_schedulock_base_azul"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/forma_progreso_nivel_circular"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Progreso"
                    android:textAlignment="center"
                    android:layout_marginTop="50dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="84%"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="85dp"
                    android:gravity="center_horizontal" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/fondo_icono_schedulock">

                    <TextView
                        android:id="@+id/puntos"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Lista de logros"
                        android:paddingLeft="20dp"
                        android:textColor="@color/color_blanco"
                        android:textSize="18sp"
                        android:layout_weight="0.5"
                         />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Puntaje "
                        android:textAlignment="textEnd"
                        android:layout_weight="0.5"
                        android:paddingRight="20dp"
                        android:textColor="@color/color_blanco"
                        android:textSize="18sp"
                        android:gravity="end" />

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lista_logros_ver_logros"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:padding="2dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

