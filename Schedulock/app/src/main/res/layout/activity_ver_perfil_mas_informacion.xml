<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VerPerfilMasInformacion">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="Schedulock"
            android:textStyle="bold"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_menu_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:onClick="goMenuDeslizable"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/forma_imagen_circular"
        android:src="@drawable/icono_usuario"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nombre de usuario"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="correousuario@hotmail.com"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Información del perfil"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="5dp"
            android:text="Mas información"
            android:textAlignment="center"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/forma_rectangulo_bordes_redondeados"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/forma_rectangulo_bordes_redondeados"
                android:layout_weight="0.5"
                android:drawableTop="@drawable/icono_estrella_trofeo"
                android:text="Logros \n 10/50"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/forma_rectangulo_bordes_redondeados"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:drawableTop="@drawable/icono_canlendario"
                android:text="Calendarios \n 5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/forma_rectangulo_bordes_redondeados"
                android:layout_weight="0.5"
                android:drawableTop="@drawable/icono_notas"
                android:text="Notas \n 10"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/forma_rectangulo_bordes_redondeados"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:drawableTop="@drawable/icono_canlendario"
                android:text="Actividades \n 13"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>