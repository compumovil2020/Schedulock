<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/fondo_barra_lateral_inferior"
        android:layout_height="wrap_content"
        android:padding = "5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.7">
            <TextView
                android:id="@+id/tv_nom_actividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actividad X"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/color_texto_gris_claro" />

            <TextView
                android:id="@+id/tv_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria X"
                android:textSize="15sp"
                android:textColor="@color/color_texto_gris_claro" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_inicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicio:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_texto_gris_claro" />

                <TextView
                    android:id="@+id/tv_inicio_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07/09/2020 10:00"
                    android:textSize="17sp"
                    android:textColor="@color/color_texto_gris_claro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_fin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fin:"
                    android:textColor="@color/color_texto_gris_claro"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tv_fin_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="07/09/2020 12:00"
                    android:textSize="17sp"
                    android:textColor="@color/color_texto_gris_claro" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>